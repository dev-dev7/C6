<style>
  
  .wider-page, .page-content, .rte {
    
    max-width:1000px !important;
  }
  
  h2 {
   padding-top:1em; 
    
  }
  
  
  @media screen and (min-width: 1080px) {
  .page-content,
  .page-masthead {
    max-width: 1000px !important;
  }
}
  
  
  @media screen and (max-width:1100px) {
    
    .wider-page {
    
    width:95% !important;
      
    }
    
    
  }
  
  
</style>
<article class="site-page" data-template-page>
  <header class="page-masthead">
    <h1 class="page-title">
      {{ page.title }}
    </h1>
  </header>

  {% if page.content != blank %}
    <div class="page-content rte wider-page" style="width:1000px !important;">
      {{ page.content }}
    </div>
  {% endif %}
</article>
