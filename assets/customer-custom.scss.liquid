.customer-category {
    margin-top: 70px;
    margin-bottom: 70px;
    max-width: 960px;
    margin-left: auto;
    margin-right: auto;
    .customer-category-row {
        @media (min-width: 768px) {
            display: flex;
        }
    }

    .customer-category-col {
        margin: 15px 15px;
        background-color: #f1f2f2;
        flex: 1;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        @media (min-width: 768px) {
            width: 33.3%;
        }
        display: block;
    }
    .customer-category-col:hover {
        cursor: pointer;
    }
    img {
        max-width: 100%;
        min-height: auto;
        padding-top: 25px;
        padding-bottom: 40px;
    }
    span {
        font-size: 24px;
        font-weight: bold;
        color: #231f20;
        border-bottom: 2px solid rgb(227, 35, 28);
    }
    .customer-category-text {
        padding-bottom: 30px;
    }
}

.become-terms-customer {
    position: relative;
    max-width: 1320px;
    padding: 70px 15px 0px;
    margin-left: auto;
    margin-right: auto;
    .top-arch {
        position: absolute;
        width: 140px;
        height: 70px;
        border-radius: 70px 70px 0 0;
        left: calc(50% - 70px);
        top: 4px;
        border-color: #231f20;
        border-left: 4px solid;
        border-top: 4px solid;
        border-right: 4px solid;
        background: #FFF;
        z-index: 1;
        text-align: center;
        img {
            margin-top: 22px;
        }
    }
    .become-terms-customer-header {
        border: 4px solid #231f20;
        text-align: center;
        position: relative;
        padding: 35px 35px 25px;
        display: flex;
        .header-content {
            width: 100%;
            span {
                line-height: 35px;
            }
        }
        .header-toggle {
            width: 2%;
            margin-top: auto;
            margin-bottom: auto;
        }
        span {
            text-transform: uppercase;
            font-size: 24px;
            @media (min-width: 768px) {
                font-size: 32px;
            }
            font-weight: bold;
            color: #231f20;
        }
        .toggle-become-terms:hover {
            cursor: pointer;
        }
    }
    .become-terms-customer-content {
        border-top: none!important;
        border: 4px solid #231f20;
        @media (min-width: 768px) {
            padding: 30px 60px 60px;
            p {
                font-size: 30px;
                font-family: sans-serif!important;
                color: #231f20;
            }
            .button {
                padding: 20px 50px 16px !important;
            }
            .button-text {
                font-size: 30px;
            }
        }
        padding: 10px 15px 30px;
        p {
            font-size: 22px;
            font-family: sans-serif!important;
            color: #231f20;
        }
        .button {
            padding: 20px 30px 16px !important;
            opacity: 1;
            text-align: center
        }
        .button-text {
            font-size: 18px;
        }
    }
}

