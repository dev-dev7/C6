.customer-modal {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 999;
    .customer-modal-inner {
        max-width: 500px;
        min-width: 355px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: white;
        padding: 2rem 2.5rem;
        width: auto;
        border-radius: 0.2rem;
        @media (max-width: 719px) {
            .form-field-filled:first-child {
                margin-bottom: 10px;
            }
        }
        @media (max-width: 374px) {
            min-width: 300px;
            .button {
                padding: 12px 20px 16px !important;
            }
        }
    }
    .customer-modal-background {
        background-color: rgba(0,0,0,0.5);
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
    }
    .customer-modal-title {
        margin-top: 10px;
    }
}

.modal-display-none {
    visibility: hidden;
