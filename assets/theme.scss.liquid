      .site-header-search-button {
        left: 0;
        margin-top: -22px;
        padding-left: 2px;
      }

      .live-search {
        margin-right: 0;
        margin-left: $local-header-icon-width - $local-header-icon-padding;
      }

      .site-header-main-actions {
        display: none;
