  text-align: center;

  .slideshow-height-fullscreen + & {
    position: absolute;
    top: 50%;
    left: 50%;
    margin: 0;
    transform: translate(-50%, -50%);
  }

  @include media($max: $bp-small) {
    max-width: 90%;
    text-align: center;
  }
  @include media($min: $bp-small) {
