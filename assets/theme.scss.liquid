  }

  .plyr__video-wrapper,
  .plyr__poster {
    background-color: $color-placeholder-background;
  }

  .plyr__controls {
    background: transparent;
    border: none;
    border-radius: $button-border-radius;
    box-shadow: 0 0 0 1px rgba($color-text-headings, 0.05);
