.site-header-search-button {
  left: $local-header-icon-width;
  margin-top: (-1 * $header-content-height / 2) + 2px;
  padding: 0;

  @include media($min: $bp-small) {
    left: $space-large + rem($local-header-icon-width - $local-header-icon-padding);
