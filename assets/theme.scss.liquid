    .productitem--image-swatch {
      transform: translate(-50%, 0);
    }

    &.product-item-image-no-objectfit {
      background-position: center;
      background-size: cover;

      img {
        display: none;
      }

      [data-rimg-canvas] {
        display: none;
      }
    }
  }
