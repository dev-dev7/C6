  a {
    @extend %link--default;

    &:focus {
      outline: solid transparentize($color-text-links, 0.5);
      outline-offset: 4px;
    }
  }
}

.search-flydown--content-items-none {
  @include font-size-body;
  margin-top: $space-xx-small;
  margin-bottom: 0;
  color: $color-text-regular-text;
