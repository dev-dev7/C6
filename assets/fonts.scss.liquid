    // ----- Buttons ----- //
    
    .button{
      @include soliel(800);
      font-size: 15px;
      letter-spacing: .07em;
      font-variant: small-caps;
      text-transform: lowercase!important;

      display: inline-block;
      // padding: 15px 30px!important; 
      padding: 12px 30px 16px!important; 
      margin: 15px 0;
      border-radius: 500px!important; border: none!important;
      text-decoration: none;

      transition: all .1s;
      
      &, 
      &:before{
        // background-color: var(--button-background);
        // border-color: transparent;
        // transition: all .3s;
      }

      &:hover,
      &:hover:before{
        // color: var(--button-background);
        // background: var(--black)!important;
      }
    }

    .button--primary{
      background: var(--red);
      color: #fff!important;

      &:hover{ background: var(--red--dk); }
    }
    .button--secondary{
      background: #000;
      color: #fff!important;

      &:hover{ background: var(--grey--dk); }
    }  
    .button--text{
      color: #000;
      padding: 0!important;
      border-radius: 0!important;
    }

    .okeReviews-select select{
      @extend .button;
    }

    .minmaxify-ok,
    body .hulk_reorder_order_detail_page,
    body .hulk_reorder_button,
    body .hulkapps .hulk_pop_up .hulk_modal-content .hulk_addtocart,
    .shopify-payment-button__button{
      @extend .button;
      @extend .button--primary;
    }

    .button-secondary,
    body .hulkapps .hulk_pop_up .hulk_modal-content .hulk_checkout{
      @extend .button;
      @extend .button--secondary;
    }

    .okeReviews .okeReviews-button.okeReviews-reviewsWidget-header-controls-writeReview{
      @extend .button;
      @extend .button--secondary;
      width: 300px; text-align: center;

      @media screen and (max-width: 640px){
        width: 100%;
      }
    }
    

