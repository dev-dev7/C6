    .announcement-bar {
      div{ line-height: 1!important; }
      .announcement-bar-link { 
        position: static; text-decoration: none; 
      }
    }

    .utility-bar-right{
      margin-right: 20px;
    }

    .site-header-wrapper.site-header--sticky{
      top: -1px;
    }

    .meganav-inner{
       .navmenu-link-parent{ 
        font-weight: 600 !important;
      }
      .navmenu-meganav--title{
        border-bottom: 1px solid var(--grey--lt);
        padding-bottom: 10px;
      }
      .navmenu-meganav--image-size-small{ width: 60%; }
    }

    .live-search{
      max-width: 60%;
      margin: 0 auto;

      .form-field-input{
        border: none; border-radius: 40px;
        background-color: var(--grey--lt);
      }
      &.live-search--active .form-field-input{
        border-radius: 22px;
      }
      .live-search-button{
        left: -55px; z-index: 1;
        border: none;
        background: transparent;

        svg{ color: var(--red); }
      }

      .search-flydown--product-items--none+.search-flydown--footer{ display: none; }

      @media screen and (max-width: 767px){
        &:not(.live-search--takeover){
          position: absolute;
          right: 70px;
          top: 10px;
          width: 40px;
          input{ background-color: #fff; }
          .live-search-button{ pointer-events: none; left: -35px; background: #fff; }
        }
        &.live-search--takeover{
          top: 50px;
          max-width: 100%;
        }
      }
      @media screen and (max-width: 480px){
        &:not(.live-search--takeover) .live-search-button{
          left: -30px;
        }
      }
    }

    .site-header-main .site-header-actions{
      position: absolute; right: 80px; top: 46%;
      
      .traditional-header--scrolled &{ margin-top: -6px; }

      li a{ padding-right: 3px; }

      @media screen and (max-width: 1023px){
        display: none;
      }
    }

    .site-header-logo{
      @media screen and (max-width: 1023px){
        margin: 0;
      }
    }

    .site-header-menu-button{
      @media screen and (max-width: 1023px){
        left: auto;
        right: calc(1.640625rem + 80px);
      }
    }

    .site-header-cart-button{
      svg{ color: var(--red); }
    }

    .site-navigation{
      text-align: center;

      .navmenu-meganav.navmenu-meganav--desktop{ text-align: left; }
    }

    .atc-banner--container{
      .atc-banner--cart{
        text-align: center;

        form{ width: 80%; margin: 0 auto; }
        .button{ display: block; width: 100%; }
      }
