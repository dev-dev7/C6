    .dynamic-collection-list--section{
      .dynamic-collection-list--item{ 
        position: relative; 
        margin-bottom: 20px; border-radius: 0;
      }

      .collection--item-image{
        @media screen and (max-width: 640px){
          max-height: 250px; overflow: hidden;
        }
      } 
      .collection--item-image img, 
      .collection--item-image svg{
        border-radius: 0;
      }

      .dynamic-collection-list--item-link{
        position: absolute; bottom: 0; top: 0; left: 0; right: 0;
        display: -webkit-box; display: -ms-flexbox; display: flex; 
        -webkit-box-orient: vertical; -webkit-box-direction: normal; -ms-flex-direction: column; flex-direction: column; 
        -webkit-box-align: start; -ms-flex-align: start; align-items: flex-start; 
        -webkit-box-pack: end; -ms-flex-pack: end; justify-content: flex-end;
        padding: 5px 15px; 
        text-align: left;

        background: -webkit-gradient(linear, left top, left bottom, color-stop(50%, transparent), color-stop(90%, rgba(0,0,0,1)));
        background: -o-linear-gradient(top, transparent 50%, rgba(0,0,0,1) 90%);
        background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,1) 90%);

        .dynamic-collection-list--item-title{
          text-align: left;
          margin: 0;
          color: #fff!important;
        }
        .dynamic-collection-list--item-title-mobile{
          color: #fff!important;
        }
        .dynamic-collection-list--item-cta{
          display: block;
          color: #fff!important;
          transition: opacity 0.1s ease;
        }

        &:hover{
          .dynamic-collection-list--item-title,
          .dynamic-collection-list--item-title-mobile,
          .dynamic-collection-list--item-cta{
            opacity: .7;
          }
        }
      }
      
      .dynamic-collection-list--show-more-button{ display: none; }

      @media screen and (max-width: 900px){
        .dynamic-collection-list--inner{
          display: -ms-grid;
          display: grid;
          -ms-grid-columns: 1fr;
          grid-template-columns: 1fr;

          .dynamic-collection-list--item{ width: 100%; margin-left: 0; }
        }
      }      
    }

