        color: var(--grey--dk); font-weight: 300;
      }
      
      .product--stock-level{ 
        margin: 0; 
        
        &.stock-level--in-stock{ display: none; }
        &.stock-level--no-stock .stock-level--text{
          color: #000;

          &:before{
            content: "";
            position: relative; top: 5px;
            display: inline-block;
            width: 19px; height: 20px;
            margin-right: 2px;
            background: url({{ "icon--oos.png" | asset_url }}) no-repeat 50% 50% / contain;
          }
        }
      }
      .productitem--listview-free-shipping{ 
        color: #000; 

        &:before{
          content: "";
          position: relative; top: 6px;
          display: inline-block;
          width: 20px; height: 20px;
          margin-right: 4px;
          background: url({{ "icon--checkmark.png" | asset_url }}) no-repeat 50% 50% / contain;
        }
      }
    
      .productitem--actions{
        bottom: auto;
        top: 33%;
        z-index: 100;

        .button{ margin: 0; }
      }

      .flickity-button{
        border-radius: 500px;
        background: var(--red)!important;
        transition: all .3s;
        opacity: 1;

        &:hover{ background: var(--red--dk)!important; }

        svg{ 
          left: 36%; width: 50%; height: 36px!important;
          .arrow{ fill: #fff!important; }
        }
      }
    }

    .featured-collection--section{
      overflow: hidden;

      @media screen and (max-width: 900px){
        .featured-collection--container .featured-collection--content .flickity-slider--wrapper{
          position: static;
        }
        .featured-collection--container .featured-collection--content .flickity-viewport{
          height: inherit!important;

          .flickity-slider{ display: -ms-grid; display: grid; -ms-grid-columns: 1fr 1fr; grid-template-columns: 1fr 1fr; }
        }
        .featured-collection--container .featured-collection--content.flickity-enabled .productgrid--item{
          height: inherit;
          position: relative!important;
          left: 0!important;
          width: 100%!important;

          .productitem--actions{ display: none; }
        }
        
        .featured-collection--banner .featured-collection--overlay{
          opacity: 0!important;
        }
        .imagestyle--small .productitem--image img, 
        .imagestyle--small .productitem--image svg, 
        .imagestyle--medium .productitem--image img, 
        .imagestyle--medium .productitem--image svg, 
        .imagestyle--large .productitem--image img, 
        .imagestyle--large .productitem--image svg{
          z-index: 1;
        }
      }
    }

