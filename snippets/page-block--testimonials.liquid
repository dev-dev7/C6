{% style %}
  {% if block.settings.background_color != blank %}
    #shopify-section-{{ block.id }} {
      background-color: {{ block.settings.background_color }};
    }
  {% endif %}

  #shopify-section-{{block.id}} {
    padding-top: {{ block.settings.spacing_mobile }}px;
    padding-bottom: {{ block.settings.spacing_mobile }}px;
  }

  @media screen and (min-width: 720px) {
    #shopify-section-{{block.id}} {
      padding-top: {{ block.settings.spacing_desktop }}px;
      padding-bottom: {{ block.settings.spacing_desktop }}px;
    }
  }

  {% if block.settings.title_color != blank %}
    #shopify-section-{{ block.id }} .testimonials-heading {
      color: {{ block.settings.title_color }};
    }

    #shopify-section-{{ block.id }} .testimonials .dot {
      background-color: {{ block.settings.title_color }};
    }
  {% endif %}

  {% if block.settings.subtitle_color != blank %}
    #shopify-section-{{ block.id }} .testimonials-subheading,
    #shopify-section-{{ block.id }} .testimonials-subheading a {
      color: {{ block.settings.subtitle_color }};
    }
  {% endif %}

  .testimonials{ justify-content: flex-start; }
  .testimonial{ flex-grow: 0; margin-left: 20px!important; }
  @media screen and (max-width: 1023px){
    .testimonial{ margin-left: 0!important; }
  }
{% endstyle %}

<script
  type="application/json"
  data-section-id="{{ block.id }}"
  data-section-type="dynamic-testimonials"
>
</script>

