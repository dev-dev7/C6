                size: '60x',
                lazy: settings.lazy_load
              %}
            </figure>
          {% endif %}

          <blockquote class="testimonial-blockquote">
            {% if block.settings.citation--1 %}
              <footer class="testimonial-blockquote-footer">
                <cite class="testimonial-blockquote-citation">{{ block.settings.citation--1 }}</cite>
