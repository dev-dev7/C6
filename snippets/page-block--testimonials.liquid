  {% if block.settings.title != blank or block.settings.subtitle != blank %}
    <header class="testimonials-header">
      {% if block.settings.title != blank %}<h2 class="home-section--title testimonials-heading">{{ block.settings.title }}</h2>{% endif %}
      {% if block.settings.subtitle != blank %}<div class="home-section--subheading testimonials-subheading">{{ block.settings.subtitle }}</div>{% endif %}
