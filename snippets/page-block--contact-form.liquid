    </div>

    <div class="form-fields-columns">
      {% comment %} POSTAL CODE/ZIP CODE {% endcomment %}
      <div class="form-field form-field--half">
        {% assign value = '' %}
        {%- if form.postal -%}
          {% assign value = form.postal %}
        {%- elsif customer -%}
          {% assign value = customer.postal %}
        {%- endif -%}

        <input
          class="form-field-input form-field-text {% if form.errors contains 'postal' %}form-field-error{% endif %}"
          id="contact_postal"
          name="contact[postal]"
          type="text"
          value="{{ value }}">

        <label class="form-field-title" for="contact_postal">
          {{ 'contact.form.postal' | t }}
        </label>
      </div>


      {% comment %} COUNTRY {% endcomment %}
      <div class="form-field form-field--half">
        {% assign value = '' %}
        {%- if form.country -%}
          {% assign value = form.country %}
        {%- elsif customer -%}
          {% assign value = customer.country %}
        {%- endif -%}

        <input
          class="form-field-input form-field-text {% if form.errors contains 'country' %}form-field-error{% endif %}"
          id="contact_country"
          name="contact[country]"
          type="text"
          value="{{ value }}">

        <label class="form-field-title" for="contact_country">
          {{ 'contact.form.country' | t }}
        </label>
      </div>
    </div>


    {% comment %} ESTIMATED WEEKLY VOLUME (whole beans in lbs) {% endcomment %}
    <div class="form-field">
      {% assign value = '' %}
      {%- if form.est-volume -%}
        {% assign value = form.est-volume %}
      {%- elsif customer -%}
        {% assign value = customer.est-volume %}
      {%- endif -%}

      <input
        class="form-field-input form-field-text {% if form.errors contains 'est-volume' %}form-field-error{% endif %}"
        id="contact_est-volume"
        name="contact[est-volume]"
        type="text"
        value="{{ value }}">

      <label class="form-field-title" for="contact_est-volume">
        {{ 'contact.form.est-volume' | t }}
      </label>
    </div>


    {% comment %} WHAT ARE YOU LOOKING TO SERVE (Espresso, Drip, both) {% endcomment %}
    <div class="form-field">
      {% assign value = '' %}
      {%- if form.looking-to-serve -%}
        {% assign value = form.looking-to-serve %}
      {%- elsif customer -%}
        {% assign value = customer.looking-to-serve %}
      {%- endif -%}

      <select
        class="form-field-input form-field-text {% if form.errors contains 'looking-to-serve' %}form-field-error{% endif %}"
        id="contact_looking-to-serve"
        name="contact[looking-to-serve]"
        type="select"
        value="{{ value }}">
        <option value="Espresso">Espresso</option>
        <option value="Drip">Drip</option>
        <option value="Both">Both</option>
      </select>
      {% comment %} <input
        class="form-field-input form-field-text {% if form.errors contains 'looking-to-serve' %}form-field-error{% endif %}"
        id="contact_looking-to-serve"
        name="contact[looking-to-serve]"
        type="text"
        value="{{ value }}"> {% endcomment %}

      <label class="form-field-title" for="contact_looking-to-serve">
        {{ 'contact.form.looking-to-serve' | t }}
      </label>
    </div>


    {% comment %} ARE YOU LOOKING TO PURCHASE EQUIPMENT {% endcomment %}
    <div class="form-field">
      {% assign value = '' %}
      {%- if form.looking-to-purchase -%}
        {% assign value = form.looking-to-purchase %}
      {%- elsif customer -%}
        {% assign value = customer.looking-to-purchase %}
      {%- endif -%}

      <select
        class="form-field-input form-field-text {% if form.errors contains 'looking-to-purchase' %}form-field-error{% endif %}"
        id="contact_looking-to-purchase"
        name="contact[looking-to-purchase]"
        type="select"
        value="{{ value }}">
        <option value="Yes">Yes</option>
        <option value="No">No</option>
      </select>
      {% comment %} 
      <input
        class="form-field-input form-field-text {% if form.errors contains 'looking-to-purchase' %}form-field-error{% endif %}"
        id="contact_looking-to-purchase"
        name="contact[looking-to-purchase]"
        type="text"
        value="{{ value }}"> {% endcomment %}

      <label class="form-field-title" for="contact_looking-to-purchase">
        {{ 'contact.form.looking-to-purchase' | t }}
      </label>
    </div>


    {% comment %} Notes {% endcomment %}
    <div class="form-field">
      {% assign value = '' %}
      {%- if form.body -%}
        {% assign value = form.body %}
      {%- endif -%}
      <textarea
        class="form-field-input form-field-textarea {% if form.errors contains 'body' %}form-field-error{% endif %}"
        id="contact_message"
        name="contact[message]">{{ value }}</textarea>

      <label class="form-field-title" for="contact_body">
        {{ 'contact.form.notes' | t }}
      </label>
    </div>

    <div class="form-action-row">
      <button class="button-primary contact-form-button" type="submit">
        {{ 'contact.form.send' | t }}
      </button>
    </div>
  {% endform %}
  </div>
</div>

