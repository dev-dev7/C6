<section class="atc-banner--container" role="log" data-atc-banner>
  <div class="atc-banner--outer">
    <div class="atc-banner--inner">
      <div class="atc-banner--product">
        <span class="atc-banner--product-title u-h3">
          <span class="atc-banner--product-title--icon">
            {%- include 'icon-library', id: 'icon-checkmark' -%}
          </span>
          {{ 'add_to_cart_banner.general.product_added' | t }}
        </span>

        <div class="atc--product">
          <div class="atc--product-image" data-atc-banner-product-image>
            {{ 'image' | placeholder_svg_tag: 'placeholder--image' }}
          </div>
          <div class="atc--product-details">
            <span class="atc--product-details--title u-h5" data-atc-banner-product-title></span>

            <span class="atc--product-details--title u-h5" data-atc-banner-product-line-item></span>

            <span class="atc--product-details--options u-h6" data-atc-banner-product-options></span>
            <span class="atc--product-details--price u-h6">
              <span class="atc--product-details--price-quantity" data-atc-banner-product-price-quantity></span>
              <span class="atc--product-details--price-value money" data-atc-banner-product-price-value></span>
              <span class="atc--product-details--unit-price hidden" data-atc-banner-unit-price>
                {{ 'product.item.price.price_per_unit_html' | t: total_quantity: '** total_quantity **', unit_price: '** unit_price **', unit_measure: '** unit_measure **' }}
              </span>
            </span>
          </div>
        </div>
      </div>

      <div class="atc-banner--cart">
        <div class="atc-banner--cart-subtotal">
          <span class="atc-subtotal--label u-h3">
            {{ 'add_to_cart_banner.general.sub_total' | t }}
          </span>
          <span class="atc-subtotal--price money u-h4" data-atc-banner-cart-subtotal></span>
        </div>

        <footer class="atc-banner--cart-footer">
          <form
            action="{{ routes.cart_url }}"
            method="post"
            aria-label="cart checkout"
          >
            <button class="button button--primary atc-button--checkout" type="submit" name="checkout" data-atc-button-checkout>
              {% if settings.enable_checkout_lock_icon %}
                {% include 'icon-library', id: 'icon-checkout-lock' %}
              {% endif %}
              <span>{{ 'add_to_cart_banner.general.checkout' | t }}</span>
            </button>
          </form>

          <a class="button button--text atc-button--viewcart" href="{{ routes.cart_url }}" data-atc-banner-cart-button>
            {{ 'add_to_cart_banner.general.view_cart_html' | t: count: '<span></span>' }}
          </a>
        </footer>
      </div>
    </div>

    <button
      class="atc-banner--close"
      type="button"
      aria-label="{{ 'general.accessibility.close' | t }}"
      data-atc-banner-close
    >
      {% include 'icon-library', id: 'icon-menu-close' %}
    </button>
  </div>
</section>